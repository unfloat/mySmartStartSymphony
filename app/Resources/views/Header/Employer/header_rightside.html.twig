<!-- Right Side Content / End -->
<div class="right-side">

    <!--  User Notifications -->
    <div class="header-widget hide-on-mobile">

        <!-- Notifications -->
        <div class="header-notifications">

            <!-- Trigger -->
            <div class="header-notifications-trigger">
                <a href="#"><i class="icon-feather-bell"></i>
                    {% if mgilet_notification_unseen_count(app.user) > 0 %}
                    <span>{{mgilet_notification_unseen_count(app.user)}} </span>
                    {% endif %}
                </a>
            </div>

            <!-- Dropdown -->
            <div class="header-notifications-dropdown">

                <div class="header-notifications-headline">
                    <h4>Notifications</h4>
                    <button class="mark-as-read ripple-effect-dark" title="Mark all as read" data-tippy-placement="left">
                        <i class="icon-feather-check-square"></i>
                    </button>
                </div>
                {% if mgilet_notification_count(app.user) > 0 %}

                <div class="header-notifications-content">
                    <div class="header-notifications-scroll" data-simplebar>
                        <ul>
                              {{mgilet_notification_render(app.user ,{'seen': false }) }}
                        </ul>
                    </div>
                </div>
                {% endif %}

            </div>

        </div>
    </div>
    <!--  User Notifications / End -->

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        <!-- User Menu -->
        <div class="header-widget">

            <!-- Messages -->
            <div class="header-notifications user-menu">
                <div class="header-notifications-trigger">
                    <a href="#"><div class="user-avatar status-online"><img src="{{ asset('assets/images/user-avatar-small-01.jpg') }}" alt=""></div></a>
                </div>

                <!-- Dropdown -->
                <div class="header-notifications-dropdown">
                    <!-- User Status -->
                    <!-- User Name / Avatar -->
                    <div class="user-details">

                        <ul class="user-menu-small-nav">
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="icon-material-outline-power-settings-new"></i>{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    {% endif %}

</div>
<!-- User Menu / End -->


    <!-- Mobile Navigation Button -->
    <span class="mmenu-trigger">
					<button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</button>
				</span>

</div>
