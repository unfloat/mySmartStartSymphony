                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-xl-9 col-lg-8 content-left-offset">
                <div class="headline" style="margin-bottom: 8%">
                    <h3 class="notify-box margin-top-15">My Notes</h3>
                    <!--Create Note Button-->
                    <a href="{{ path('create_self_note') }}"><input  type="button" class="button blue ripple-effect button-sliding-icon" value="Add a Note" style="margin-left: 50% ;margin-top: 3%;width: 130px"></a>
                    <!-- End Create Note Button-->

                </div>

                <div class="row">


                    {% for n in self_notes_list %}
                        <div class="zoom-anim-dialog dashboard-box margin-top-0" style="width:300px;margin: 4% 5% 8% 6%;">
                            <div class="headline">
                                <h3><i class="icon-feather-edit-3"></i>My Note {{ n.id }} : {{ n. noteName }}</h3>
                                <div>
                                    <div style="margin-top: 5%;">
                                        {% if n.priority == "Height" %}
                                            <div class="note-priority high">{{ n.priority}}</div>
                                        {% endif %}
                                        {% if n.priority == "Medium" %}
                                            <div class="note-priority medium">{{ n.priority}}</div>
                                        {% endif %}
                                        {% if n.priority == "Low" %}
                                            <div class="note-priority low">{{ n.priority}}</div>
                                        {% endif %}
                                    </div>

                                    <div class="dashboard-note" style="margin-top: 5%">
                                        <h3 style="text-align: center">{{ n.noteText}}</h3>
                                    </div>
                                    <a href="{{ path('update_self_note', {'id': n.id}) }}" class="button ripple-effect margin-top-5 margin-bottom-10"><i class="icon-feather-edit"></i></a>
                                    <a href="{{ path('delete_self_note', {'id': n.id}) }}" class="button ripple-effect margin-top-5 margin-bottom-10"><i class="icon-feather-trash-2"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>

        </div>

        <!-- Pagination -->
        <div class="clearfix"></div>
        <div class="row">
            <div id="pagination" class="col-md-12">
                <div class="pagination-container margin-top-60 margin-bottom-60">
                    {{ knp_pagination_render(self_notes_list) }}
                </div>
            </div>
        </div>
        <!-- Pagination / End -->
    </div>
    <!-- End Page Content-->

{% endblock %}