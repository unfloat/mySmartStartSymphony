                                {#<!-- priority -->#}
                                {#<div class="sidebar-widget">#}
                                {#<h3>Priority</h3>#}
                                {#<div class="input-with-icon">#}
                                {#<div id="autocomplete-container">#}
                                {#<input id="autocomplete-input" type="text" placeholder="Priority" name="priority"></div>#}
                                {#</div>#}
                                {#</div>#}
                                {#<!-- End priority -->#}

                                {#<!-- sort -->#}
                                {#<div class="sidebar-widget">#}
                                {#<h3>Sort by </h3>#}
                                {#<div>#}
                                {#<select name="sortBy" style="width: 200%">#}
                                {#<option value="any">Sort By</option>#}
