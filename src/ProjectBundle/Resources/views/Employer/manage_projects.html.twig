{% extends "Dashboard/Employer/dashboard_layout.html.twig" %}

{% block content %}
    <!-- Employer Content-->

    <!-- Employer Headline -->
    <div class="dashboard-headline">
        <h3>Manage Tasks</h3>

        <!-- Breadcrumbs -->
        <nav id="breadcrumbs" class="dark">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Dashboard</a></li>
                <li>Manage Tasks</li>
            </ul>
        </nav>
    </div>

    <!-- Row -->
    <div class="row">

        <!-- Employer Box -->
        <div class="col-xl-12">
            <div class="dashboard-box margin-top-0">

                <!-- Headline -->
                <div class="headline">
                    <h3><i class="icon-material-outline-assignment"></i> My Tasks</h3>
                </div>

                <div class="content">
                    <ul class="dashboard-box-list">
                        <li>
                            {% for manage_projects in manage_project %}
                                <!-- Job Listing -->
                                <div class="job-listing width-adjustment">


                                    <!-- Job Listing Details -->
                                    <div class="job-listing-details">
                                        <!-- Details -->
                                        <div class="job-listing-description">
                                            <h3 class="job-listing-title"><a href="{{ path('update_project',{'id':manage_projects.id   }) }}">{{ manage_projects.projectName }}</a> <span class="dashboard-status-button yellow">Expiring</span></h3>

                                            <!-- Job Listing Footer -->
                                            <div class="job-listing-footer">
                                                <ul>
                                                    <li><i class="icon-material-outline-access-time"></i> 23 hours left</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- Task Details -->
                                <ul class="dashboard-task-info">
                                    <li><strong>{{ count[manage_projects.id]['numberOfBids'] }}</strong><span>Bids</span></li>
                                    <li><strong>${{ count[manage_projects.id]['average'] }}</strong><span>Avg. Bid</span></li>
                                    <li><strong>{{ count[manage_projects.id]['minDeliveryTime'] }}</strong><span>Delivery Time</span></li>
                                </ul>

                                <!-- Buttons -->
                                <div class="buttons-to-right always-visible">
                                    {% if count[manage_projects.id]['numberOfBids'] > 0 %}
                                        <a href="{{ path('bidders',{'id': manage_projects.id}) }}" class="button ripple-effect"><i class="icon-material-outline-supervisor-account"></i> Manage Bidders <span class="button-info">{{ count[manage_projects.id]['numberOfBids'] }}</span></a>
                                    {% endif %}
                                    <a href="{{ path('update_project', {'id': manage_projects.id}) }}" class="button gray ripple-effect ico" title="Edit Project" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
                                    <a href="{{ path('delete_project', {'id': manage_projects.id}) }}" class="button gray ripple-effect ico" data-tippy-placement="top" title="Remove Project"><i class="icon-feather-trash-2"></i></a>
                                </div>
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- Row / End -->

    <!-- Pagination -->
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="pagination-container margin-top-60 margin-bottom-60">
                {{ knp_pagination_render(manage_project) }}
            </div>
        </div>
    </div>
    <!-- End Pagination -->



{% endblock %}